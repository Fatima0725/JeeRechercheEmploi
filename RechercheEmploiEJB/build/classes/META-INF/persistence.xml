<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="RechercheEmploiEJB" transaction-type="JTA">
		<jta-data-source>java:/RechercheEmploiJeeDS</jta-data-source>
		<class>com.isi.entities.Cv</class>
		<class>com.isi.entities.CategorieEmploi</class>
		<class>com.isi.entities.Candidature</class>
		<class>com.isi.entities.NotificationEmail</class>
		<class>com.isi.entities.Offre</class>
		
		<properties>
			<property name="jakarta.persistence.schema-generation.database.action" value="create"/>
			<property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
		</properties>
	</persistence-unit>
</persistence>
